<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/amazonbutton"
        android:layout_width="205dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:scaleType="fitXY"
        android:src="@mipmap/amazon_logo"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="30dp" />

    <ImageButton
        android:id="@+id/BGIbutton"
        android:layout_width="209dp"
        android:layout_height="94dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@mipmap/mygenebox_logo"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="104dp"
        android:text="You can order a kit box or anything you want from this place. You can order the kits or other necessary material from either of these sites. " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"
        android:text="Order Page"
        android:textSize="30sp"
        app:fontFamily="monospace"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="16dp" />
</RelativeLayout>
