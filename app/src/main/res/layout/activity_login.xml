<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/title_login"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="253dp"
        android:layout_height="130dp"
        android:layout_above="@id/editText_user"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo" />

    <ImageView
        android:id="@+id/Ball"
        android:layout_width="292dp"
        android:layout_height="329dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/cropped_nanoball" />

    <ImageView
        android:id="@+id/bgi"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bgi" />

    <EditText
        android:id="@+id/editText_user"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editText_password"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:ems="10"
        android:hint="@string/username_text"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:singleLine="true" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/button_login_text"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/textView_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="5dp"
        android:text="@string/or_text"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/button_sign_in"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView_or"
        android:layout_marginTop="5dp" />

    <View
        android:id="@+id/left_divider"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_toLeftOf="@id/textView_or"
        android:layout_alignTop="@id/textView_or"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:background="@android:color/black" />

    <View
        android:id="@+id/right_divider"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/textView_or"
        android:layout_alignTop="@id/textView_or"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="13dp"
        android:background="@android:color/black" />

</RelativeLayout>